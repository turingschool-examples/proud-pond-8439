<h1><%= @park.name %></h1>
<h5>Admissions: $<%=@park.admission_cost%>.00</h5>

<h3>Rides</h3>
<% @park.rides.alpha_order.each_with_index do |ride, index| %>
<p><%= index + 1 %>. <%= ride.name %><%if !ride.open  %> * <% end %></p>
<% end %>

<h4>Average Thrill Rating: <%= @park.rides.avg_thrill.round(1)%>/10</h4>
<p> * Closed </p>
