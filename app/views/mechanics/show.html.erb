<h1> <%= @mechanic.name %> </h1>

<h4> Years of Experience: <%= @mechanic.years_experience %> </h4><hr/>
<div id="rides">
  <% @mechanic.thrill_sort.each do |ride| %>
    <h2><%= ride.name if ride.open %></h2>
    <hr/>
  <% end %>
</div>

<div id="work_form">
  <%= form_with url: "/mechanics/#{@mechanic.id}", method: :post, local: true do |f| %>
    <%= f.label :ride_id, "Ride ID" %>
    <%= f.text_field :ride_id %>
    <%= f.submit "Add this ride to #{@mechanic.name}'s workload" %>
  <% end %>
</div>
