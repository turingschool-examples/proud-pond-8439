
<section id = 'mechanic_info'>
	<h4>Mechanic Info:</h4>
	<p>Name: <%= @mechanic.name %></p>
	<p>Years of experience: <%= @mechanic.years_experience %></p>
</section>


<section id = 'rides_info'>
	<h4>Current open rides they're working on:</h4>
	<% @mechanic.open_rides_by_rating.each_with_index do |ride, index| %>
	<p>Ride No. <%= index + 1 %>: <%= ride.name %></p>
	<% end %>
</section>

<section id = 'add_ride'>
	<h4>Add a ride to workload:</h4>
	<%= form_with url: "/mechanics/#{@mechanic.id}/rides", method: :post, local: true do |form| %>
	  <%= form.label :ride_id, 'Ride ID' %>
	  <%= form.text_field :ride_id %>
	  <%= form.submit 'Add Ride' %>
<% end  %>
</section>